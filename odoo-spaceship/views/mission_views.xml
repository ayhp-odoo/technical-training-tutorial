<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record model='ir.ui.view' id='mission_view_form'>
      <field name='name'>odoo.mission.form</field>
      <field name='model'>odoo.mission</field>
      <field name='arch' type='xml'>
        <form string='Add Mission'>
          <sheet>
            <grou>
              <h2>Mission Name</h2>
              <h1><field name='name'/></h1>
            </grou>
            <group>
              <group>
                <field name='launch_date' />
                <field name='comeback_date'/>
              </group> 
              <group>
                <field name='ship_id'/>
                <field name='amount_fuel'/>
                <field name='engines'/>
              </group>
            </group>
            <notebook>
              <page string='Tripulation'>
                <field name='tripulation_ids'/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model='ir.ui.view' id='mission_view_list'>
      <field name='name'>odoo.mission.list</field>
      <field name='model'>odoo.mission</field>
      <field name='arch' type='xml'>
        <tree string='Mission List'>
          <field name='name'/>
          <field name='launch_date'/>
          <field name='comeback_date'/>
        </tree>
      </field>
    </record>
    
    <record model='ir.ui.view' id='mission_view_pivot'>
      <field name='name'>odoo.mission.pivot</field>
      <field name='model'>odoo.mission</field>
      <field name='arch' type='xml'>
        <pivot>
          <field name='amount_fuel' type='measure'/>
          <field name='engines' type='measure'/>
        </pivot>
      </field>
    </record>
    
    <record model='ir.ui.view' id='mission_view_graph'>
      <field name='name'>odoo.mission.graph</field>
      <field name='model'>odoo.mission</field>
      <field name='arch' type='xml'>
        <graph string='Mission nessesary'>
          <field name='amount_fuel' type='row'/>
          <field name='engines' type='row'/>
        </graph>
      </field>
    </record>
  
  </data>
</odoo>