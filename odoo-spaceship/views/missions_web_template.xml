<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <data>
    <template id='missions_website'>
      <t t-call='website.layout'>
        <t t-set='title'>Odoo Spaceships</t>
        <div class='oe_structure'>
          <div class='container'>
            <h1>Missions</h1>
            <t t-foreach='missions' t-as='mission'>
              <div style='background-color: lightblue;'>
                <h3>
                  <t t-esc='mission.id'/> - <t t-esc='mission.name'/>
                </h3>
                <p>
                  Engines: <span t-field='mission.engines'/>
                </p>
                <p>Ship name: <strong t-field='mission.ship_id.name' /></p>
              </div>
            </t>
          </div>
        </div>
      </t>
    </template>
  </data>
</odoo>