<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record model='ir.ui.view' id='spaceship_view_form'>
      <field name='name'>odoo.spaceship.form</field>
      <field name='model'>odoo.spaceship</field>
      <field name='arch' type='xml'>
        <form string='Add Spaceship'>
          <sheet>
            <h2>Ship's name</h2>
            <h1><field name='name' /></h1>
            <group>
              <group>
                <field name='number_passengers'></field>
              </group>
              <group>
                <field name='active' />
              </group>
            </group>
            <notebook>
              <page string='Overview'>
                <p><small>All measurements displayed here are in meters</small></p>
                <group>
                  <field name='ship_height' />
                </group>
                <group>
                  <field name='ship_width' />
                </group>
                <group>
                  <field name='fuel_type' />
                </group>
                <group>
                  <field name='ship_type' />
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record model='ir.ui.view' id='spaceship_view_list'>
      <field name='name'>odoo.spaceship.list</field>
      <field name='model'>odoo.spaceship</field>
      <field name='arch' type='xml'>
        <tree string='Spaceships'>
          <field name='name' />
          <field name='ship_type' />
          <field name='number_passengers' />
        </tree>
      </field>
    </record>
  </data>
</odoo>